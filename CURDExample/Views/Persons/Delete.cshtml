@model PersonResponse;
@{

    ViewBag.Title = "Delete Person";

}

<a asp-controller="persons" asp-action="index" class="link-hover">Back to persons List</a>
<h2>Areyou sure You Want to delete @Model.PersonName</h2>

<div class="w-50">
    <form asp-controller="persons" asp-action="Delete" method="post">
        <input  type="hidden" asp-for="PersonId"/>

        @*Persons Name*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="PersonName" class="form-label pt">
                    Person Name
                </label>
            </div>
            <div class="flex-1">
                <input asp-for="PersonName" class="form-input" disabled  />
                <span asp-validation-for="PersonName" class="text-red"></span>
            </div>
        </div>

        @*Email*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">
                    Email
                </label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" disabled="disabled" />
                <span asp-validation-for="Email" class="text-red"></span>
            </div>
        </div>   

        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">

            </div>
            <div class="flex-1">
                <button  class=" button button-red-back">Delete</button>

                <div asp-validation-summary="All" class="text"></div>
                @if (ViewBag.Errors != null)
                    {
                        <div class="text-red ml">
                            @foreach (string error in ViewBag.Errors)
                                {
                                    <li class="ml">@error</li>
                                }
                        </div>
                    }
            </div>
        </div>
        
    </form>
</div>
